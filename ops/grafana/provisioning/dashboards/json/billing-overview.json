{
  "id": null,
  "uid": "billing-overview",
  "title": "Billing Platform - Overview",
  "tags": ["billing", "platform", "overview"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Services Up",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(up{job=~\".*-service\"})",
          "legendFormat": "up",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto"
      }
    },
    {
      "type": "timeseries",
      "title": "Request Rate by Service (req/s)",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\".*-service\"}[5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Error Rate by Service (%)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(http_server_requests_seconds_count{job=~\".*-service\",status=~\"5..\"}[5m])) by (job) / clamp_min(sum(rate(http_server_requests_seconds_count{job=~\".*-service\"}[5m])) by (job), 0.001)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "P95 HTTP Latency by Service (s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=~\".*-service\"}[5m])) by (le, job))",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "4xx Error Rate by Service (%)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(http_server_requests_seconds_count{job=~\".*-service\",status=~\"4..\"}[5m])) by (job) / clamp_min(sum(rate(http_server_requests_seconds_count{job=~\".*-service\"}[5m])) by (job), 0.001)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Total Request Throughput (req/s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job=~\".*-service\"}[5m]))",
          "legendFormat": "platform",
          "refId": "A"
        }
      ]
    }
  ]
}
